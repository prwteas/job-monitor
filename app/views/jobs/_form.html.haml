= form_for @job do |f|
  - if @job.errors.any?
    #error_explanation
      %h2= "#{pluralize(@job.errors.count, "error")} prohibited this job from being saved:"
      %ul
        - @job.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :joblink
    = f.text_field :joblink
  .field
    = f.label :department
    = f.text_field :department
  .field
    = f.label :city
    = f.text_field :city
  .field
    = f.label :type
    = f.text_field :type
  .field
    = f.label :jobid
    = f.text_field :jobid
  .actions
    = f.submit 'Save'
